<%= render partial: 'spree/admin/shared/product_tabs', locals: { current: :certificates } %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @taxon_certificate } %>

<%= form_for [:admin, @taxon, @taxon_certificate], html: { multipart: true } do |f| %>
  <div data-hook="edit_taxon_certificate" class="panel panel-default">
    <div class="panel-heading">
      <h1 class="panel-title">
        <%= @taxon_certificate.attachment_file_name %>
      </h1>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <div class="col-md-3 text-center">
          <%= link_to @taxon_certificate.attachment.filename, main_app.rails_blob_path(@taxon_certificate.attachment, disposition: "attachment") %>

        </div>
        <div class="col-md-9">
          <%= render partial: 'form', locals: { f: f } %>
        </div>

        <div class="form-actions" data-hook="buttons">
          <%= button Spree.t('actions.update'), 'save' %>
          <span class="or"><%= Spree.t(:or) %></span>
          <%= button_link_to Spree.t('actions.cancel'), spree.admin_taxonomy_taxon_taxon_certificates_path(@product), id: 'cancel_link', icon: 'delete' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
