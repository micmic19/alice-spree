<div id="spree-header">
  <header id="header" data-hook>
    <div class="container">
      <div class="row">
        <figure id="logo" class="col-md-2" data-hook>
          <%= logo %>
        </figure>
		<div class='desc_block col-md-2'>
			<h1>Линолеум оптом</h1>
			<div><%= Spree::Config.alice_email %></div>
		</div>
		<div class='col-md-4'>
		<%= render partial: 'spree/shared/search' %>
		</div>
		<div class='col-md-2'>
			<h4><%= Spree::Config.alice_phone %></h4>
			<h4><%= Spree::Config.alice_phone1 %></h4>			
		</div>
		<div class='col-md-2'>
		<%= render partial: 'spree/shared/link_to_cart' %>
		</div>
      </div>
    </div>
  </header>
  <div class="container">
    <%= render partial: 'spree/shared/main_nav_bar' %>
  </div>
</div>
